# API Keys - Copy to .env.local and fill in

# Database
DATABASE_URL="file:./data/jobs.db"

# kie.ai - Video/Image/Music Generation
KIEAI_API_KEY="your_kieai_api_key_here"
KIEAI_BASE_URL="https://api.kie.ai/v1"

# HeyGen - Avatar Video Generation
HEYGEN_API_KEY="your_heygen_api_key_here"
HEYGEN_BASE_URL="https://api.heygen.com"
HEYGEN_AVATAR_ID="your_avatar_id_here"

# ElevenLabs - Voice Synthesis
ELEVENLABS_API_KEY="your_elevenlabs_api_key_here"
ELEVENLABS_VOICE_ID="your_voice_id_here"
ELEVENLABS_BASE_URL="https://api.elevenlabs.io/v1"

